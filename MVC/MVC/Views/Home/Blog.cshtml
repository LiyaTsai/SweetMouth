@section Styles
{
<style>
    img {
        height: 750px;
        width: 1124px;
    }
</style>
}
<!-- Page Header Start -->
<div class="container-fluid page-header mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container">
        <h1 class="display-3 mb-3 animated slideInDown">甜嘴MoBlog</h1>
    </div>
</div>
<!-- Page Header End -->

<!-- Blog Start -->
<div class="container-xxl py-6" id="appVue">
    <div class="container mb-5">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s"
            style="max-width: 500px">
            <h1 class="display-5 mb-3">最新訊息</h1>
        </div>

        @* btn 發文鈕 *@
        <a asp-controller="Home" asp-action="blogpostForm"
            class="btn btn-primary rounded-pill py-sm-3 px-sm-5 mb-3">發表文章</a>


        <div class="row g-4">

            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" v-for="item in NewsInfo">
                <a :href="baseUrl +'?id='+item.articleID">
                    <img class="img-fluid" :src=`/img/${item.imageName}` alt="" />
                </a>
                <div class="bg-light p-4">
                    <a class="d-block h5 lh-base mb-4" :href="baseUrl +'?id='+item.articleID">{{item.title}}</a>
                    <div class="text-muted border-top pt-4">
                        <small class="me-3"><i class="fa fa-user text-primary me-2"></i>{{item.nickName}}</small>
                        <small class="me-3"><i class="fa fa-calendar text-primary me-2"></i>{{item.time}}</small>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="container mb-5">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s"
            style="max-width: 500px">
            <h1 class="display-5 mb-3">產品心得</h1>
        </div>

        <div class="row g-4">

            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" v-for="item in BlogInfo">
                <a :href="baseUrl +'?id='+item.articleID">
                    <img class="img-fluid" :src=`/img/${item.imageName}` alt="" />
                </a>
                <div class="bg-light p-4">
                    <a class="d-block h5 lh-base mb-4" :href="baseUrl +'?id='+item.articleID">{{item.title}}</a>
                    <div class="text-muted border-top pt-4">
                        <small class="me-3"><i class="fa fa-user text-primary me-2"></i>{{item.nickName}}</small>
                        <small class="me-3"><i class="fa fa-calendar text-primary me-2"></i>{{item.time}}</small>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <div class="container mb-5">
        <div class="section-header text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s"
            style="max-width: 500px">
            <h1 class="display-5 mb-3">問題討論</h1>
        </div>

        <div class="row g-4">

            <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s" v-for="item in BlogInfo">
                <a :href="baseUrl +'?id='+item.articleID">
                    <img class="img-fluid" :src=`/img/${item.imageName}` alt="" />
                </a>
                <div class="bg-light p-4">
                    <a class="d-block h5 lh-base mb-4" :href="baseUrl +'?id='+item.articleID">{{item.title}}</a>
                    <div class="text-muted border-top pt-4">
                        <small class="me-3"><i class="fa fa-user text-primary me-2"></i>{{item.nickName}}</small>
                        <small class="me-3"><i class="fa fa-calendar text-primary me-2"></i>{{item.time}}</small>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<!-- Blog End -->
@section Scripts
{
<script src="~/js/Blog.js"></script>
}