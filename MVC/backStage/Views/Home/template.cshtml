@section Styles{

}
<h1 class="text-center my-5">後台版型 | 資料表</h1>

<div class="container" id="appVue">
    <button type="button" class="btn btn-outline-success">新增資料</button>
    <div class="row">
        <div class="col-12 mt-4">
            @*顯示資料*@
            <table class="table table-striped table-hover">
                @*表頭*@
                <thead>
                    <tr>
                        <td>表頭1</td>
                        <td>表頭2</td>
                        <td>表頭3</td>
                        <td>表頭4</td>
                        <td>按鈕</td>
                    </tr>
                </thead>

                <tbody>
                    <tr v-for="i in p">

                        @*資料顯示組件*@
                        <template>
                            <td>{{i.id}}</td>
                            <td>{{i.item1}}</td>
                            <td>{{i.item2}}</td>
                            <td>{{i.item3}}</td>
                            <td>
                                <button type="button" class="btn btn-primary" @@click="edit">編輯</button>
                                <button type="button" class="btn btn-danger" @@click="">刪除</button>
                            </td>
                        </template>

                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                    <tr v-for="i in p">

                        @* 切換編輯組件 *@
                        <template>
                            <td>{{i.id}}</td>
                            <td><input v-model="i.item1" /></td>
                            <td><input v-model="i.item2" /></td>
                            <td><input v-model="i.item3" /></td>
                            <td>
                                <button type="button" class="btn btn-primary" @@click="">修改</button>
                                <button type="button" class="btn btn-warning" @@click="">取消</button>
                            </td>
                        </template>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {

<script src="~/js/template.js"></script>

}